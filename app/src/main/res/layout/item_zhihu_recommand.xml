<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ZhiHu.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_daily_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当成程序员遇上数学"
            android:textColor="@color/item_title_tv"
            android:gravity="top|start"
            android:paddingBottom="6dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:lineSpacingExtra="2dp"
            />
        <TextView
            android:layout_marginTop="4dp"
            android:layout_below="@id/tv_daily_title"
            android:id="@+id/daily_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/item_date"
            android:textSize="14sp"
            android:text="10月18日" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_below="@id/daily_date_tv"
            android:id="@+id/iv_daily_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@mipmap/icon_zhihu_news_image_default"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@id/iv_daily_image"
            android:id="@+id/tv_daily_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/item_date"
            android:text="隔壁老王的数学之旅" />
        <View
            android:id="@+id/view_divider"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_daily_description"
            android:layout_width="match_parent"
            android:layout_height="0.2px"
            android:background="@color/item_date"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_divider"
            android:text="阅读全文"
            android:textSize="16sp"
            android:drawableRight="@mipmap/icon_daily_next"
            android:textColor="@color/item_title_tv"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
