<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BmobNews.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_item_clickable"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_data_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="top|start"
            android:lineSpacingExtra="2dp"
            android:paddingBottom="6dp"
            android:textColor="@color/item_title_tv"
            android:textSize="15sp"
            tools:text="这是一个标题" />

        <TextView
            android:id="@+id/tv_data_via"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_data_title"
            android:layout_marginTop="9dp"
            android:paddingEnd="4dp"
            android:paddingStart="0dp"
            android:textColor="@color/common_item_via"
            android:textSize="@dimen/item_via_tv"
            android:textStyle="italic"
            android:typeface="serif"
            tools:text="内容，内容" />

        <LinearLayout
            android:id="@+id/ll_data_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_data_via"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_data_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@drawable/tag_data_bg"
                android:gravity="center"
                android:textColor="@color/item_tag_tv"
                android:textSize="@dimen/item_tag_tv"
                tools:text="android" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_data_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll_data_tag"
            android:layout_alignParentEnd="true"
            android:textColor="@color/item_date"
            android:textSize="@dimen/item_date_tv"
            tools:text="222" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
